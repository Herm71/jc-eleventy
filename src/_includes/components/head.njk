<head>
		{% include "components/head-gtm.njk"%}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ metadata.description }}">
		{% if robots == "noindex" %}
			<meta name="robots" content="noindex, nofollow" />
		{% else %}
		<meta name="robots" content="index, follow" />
		{% endif %}
		
		<meta property="og:site_name" content="{{ metadata.title }}">
		<meta property="og:title" content="{{ title  | escape }}"/>
  	<meta property="og:url" content="https://jasonchafin.com{{ page.url | escape }}" />
  	<meta property="og:description" content="{{description | escape }}" />
  	<meta property="og:image" content="/img/aYijdDfoog-150.avif" />
  	<meta property="og:type" content="article" />
		<link rel="canonical" href="https://jasonchafin.com{{ page.url | escape }}"/>
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism.css' | url }}"/>
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<link rel="shortcut icon" href="/favicons/favicon-16x16.png" type="image/png" sizes="any">
		<link rel="shortcut icon" href="/favicons/favicon-32x32.png" type="image/png" sizes="32x32">
		<link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png">
		<link rel="manifest" href="/favicons/site.webmanifest">
	</head>
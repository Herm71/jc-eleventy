<!doctype html>
<html lang="en">
  {% include "components/head.njk"%}
  <body>
	{% include "components/body-gtm.njk"%}
	{% include "components/header.njk"%}

    <main {% if templateClass %} class="{{ templateClass }}"{% endif %}>
	
		<article>
				{% if pageHome !== "true" %}
				{% include "components/breadcrumbs.njk" %}
				
				<div class="article-header">
				{% if title %}<h2 class="article-title">{{title}}</h2>{%endif%}
				{% if subtitle %}<h3 class="post-subtitle">{{subtitle}}</h2>{%endif%}
				</div>
				{% else %}
				<div class="article-header">
				<h3 class="article-title">{{metadata.description}}</h3>
				</div>
				{%endif%}
    	  {{ content | safe }}
			</article>
    </main>
	{% include "components/footer.njk"%}


    <!-- Current page: '{{ page.url | url }}` was built on {% currentBuildDate%} -->
  </body>
</html>